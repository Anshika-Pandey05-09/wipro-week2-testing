@page
@model Day10_CaseStudy_Product_Management.Pages.Products.IndexModel
@{
}
<h2>Product Listing</h2>
@* <h1>@Model.ProductList</h1> *@

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price (₹)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.ProductList)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
